<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results"

android:background="#E8E8E8"
    >


    <TextView
        android:id="@+id/title_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/open_sans"

        android:gravity="center"

        android:text="Scores"

        android:textColor="@color/white"
        android:textSize="40dp"
        android:background="#35AB6E"
android:paddingBottom="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        ></TextView>





<TextView
    android:id="@+id/p1_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

 android:text="Player 1"
    android:textColor="#2F4DC4"
    android:textSize="37dp"
android:fontFamily="@font/open_sans"



android:layout_marginStart="30dp"
    android:layout_marginBottom="500dp"
    app:layout_constraintBottom_toBottomOf="parent"

    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/title_r"

></TextView>


    <TextView
        android:id="@+id/p2_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Player 2"
        android:textColor="#2F4DC4"
        android:textSize="37dp"
        android:fontFamily="@font/open_sans"



        android:layout_marginEnd="30dp"
        android:layout_marginBottom="500dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_r"

        ></TextView>


    <TextView
        android:id="@+id/p1_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="10"
        android:textColor="#2F4DC4"
        android:textSize="50dp"
        android:fontFamily="@font/open_sans"


        android:layout_marginStart="40dp"
        android:layout_marginBottom="450dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="@id/p1_txt"


        app:layout_constraintTop_toBottomOf="@id/p1_txt"

        ></TextView>


    <TextView
        android:id="@+id/p2_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="10"
        android:textColor="#2F4DC4"
        android:textSize="50dp"
        android:fontFamily="@font/open_sans"



        android:layout_marginStart="40dp"
        android:layout_marginBottom="450dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="@id/p2_txt"


        app:layout_constraintTop_toBottomOf="@id/p1_txt"

        ></TextView>

    <TextView
        android:id="@+id/winner_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:text="Winner!"
android:textSize="50dp"
        android:layout_marginBottom="200dp"
        android:textColor="#2F4DC4"
        android:textStyle="bold"

        android:fontFamily="@font/open_sans"

        app:layout_constraintTop_toBottomOf="@id/p1_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        ></TextView>

<View
    android:layout_width="300dp"
    android:layout_height="10dp"
    android:layout_marginBottom="3dp"
    app:layout_constraintTop_toBottomOf="@id/winner_txt"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@drawable/custom_button"

    ></View>


    <TextView
        android:id="@+id/winner_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2F4DC4"
        android:text=""
        android:fontFamily="@font/open_sans"
        android:textSize="50dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintTop_toBottomOf="@id/winner_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    ></TextView>


    <TextView
        android:id="@+id/play_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Play Again"
        android:textSize="30dp"
        android:padding="15dp"
        android:textColor="@color/white"
        android:background="@drawable/winner_back"
        android:fontFamily="@font/open_sans"
        app:layout_constraintTop_toBottomOf="@id/winner_val"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>